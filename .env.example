# =============================================================================
# データベース設定
# =============================================================================
DB_NAME=rinstack_finops_db
DB_USER=rinstack_user
DB_PASSWORD=rinstack_p@ssw0rd
DB_HOST=finops-mysql
DB_ROOT_PASSWORD=root_password

# データベース接続プール設定（オプション）
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# Redis設定
# =============================================================================
REDIS_HOST=finops-redis
REDIS_PORT=6379

# =============================================================================
# AWS設定
# =============================================================================
AWS_REGION=ap-northeast-1

# =============================================================================
# CURバッチ設定
# =============================================================================
# CUR取得の定期実行スケジュール（cron形式）
# デフォルト: 3分ごと
CUR_FETCH_CRON=*/3 * * * *

# =============================================================================
# アプリケーション設定
# =============================================================================
# サーバーポート
PORT=7070

# フロントエンドのベースURL
FRONTEND_BASE_URL=http://localhost:3000

# リクエストサイズ制限
REQUEST_SIZE_LIMIT=10mb

# 実行環境（development, production, it）
NODE_ENV=development

# =============================================================================
# セキュリティ設定
# =============================================================================
# S2S JWT認証用のシークレットキー
S2S_JWT_SECRET=your-s2s-jwt-secret-key-here

# 暗号化キー（32文字推奨）
ENCRYPTION_KEY=your-32-character-encryption-key
